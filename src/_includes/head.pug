//- TODO: move type system to its own file
mixin h3(text)
    h3(class="font-sans font-bold text-white text-4xl text-center py-4 md:text-left md:text-3xl") #{text}

//- TODO: move to atom
mixin navItem(href, label)
    a(class="font-sans font-bold md:inline-block md:pl-8" href=href) #{label}

mixin header()
    header(class="mx-4 my-8 text-white md:flex md:items-baseline md:justify-between")
        h3(class="font-sans font-bold text-white text-3xl text-center py-4 flex-nowrap md:text-left") Shakeel Mohamed
        nav(class="flex justify-between text-lg md:py-5 md:justify-items-end md:flex-shrink-0 md:mx-0")
            +navItem("/work", "Work")
            +navItem("/blog", "Blog")
            +navItem("/about", "About")
            +navItem("/contact", "Contact")

mixin head()
    doctype html
    html(lang="en")
        head
            meta(charset="UTF-8")
            meta(http-equiv="X-UA-Compatible", content="chrome=1")
            meta(name="viewport" content="width=device-width, initial-scale=1.0")
            link(rel="stylesheet" href="https://use.typekit.net/uun0nut.css")
            link(rel="preconnect" href="https://fonts.googleapis.com")
            link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
            link(href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet")
            //- TODO: optimize tailwind for production
            link(href="dist/tailwind.css" rel="stylesheet")
            //- TODO: open graph
            //- TODO: favicon(s)
            //- TODO: sitemap
            if block
                block

