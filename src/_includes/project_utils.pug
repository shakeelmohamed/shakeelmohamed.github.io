mixin youtube(url, caption)
    div(style="padding-bottom: 1rem;")
        iframe(src=url title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen="" style="aspect-ratio: 16 / 9; width: 100%;")
        if caption
            p.caption= caption

mixin video(url, caption)
    div(style="padding-bottom: 1rem;")
        video(width="1920" height="1080" controls="" style="aspect-ratio: 16 / 9;" data-video="0")
            source(src="https://files.cargocollective.com/c1603295/widescreen.mp4" type="video/mp4")
        if caption
            p.caption= caption