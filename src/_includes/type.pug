- var base = "font-sans ";
- var serif = "font-serif ";

- var white = "text-white ";
- var navy = "text-navy ";
- var lightBlue = "text-light-blue ";

//- TODO: subhead looks odd in bold
mixin subheading(text)
    p(class=base + white + "text-left text-xl") #{text}
        if block
            block

mixin subheadingNavy(text)
    p(class=base + navy + "text-left text-xl") #{text}

mixin p(text)
    p(class=serif + white + "text-left text-base") #{text}

mixin pNavy(text)
    p(class=serif + navy + "text-left text-base") #{text}

mixin pLightBlue(text)
    p(class=serif + lightBlue + "text-left text-base") #{text}

