mixin footernew()
    div.newfooter.grid-4
        div
            script document.write("&copy; " + new Date().getFullYear() + " Shakeel Mohamed.")
        <div>
            <div><a href="#{metadata.social.Instagram}" target=_blank>Instagram</a></div>
        </div>
        <div>
            <div><a href="#{metadata.social.LinkedIn}" target=_blank>LinkedIn</a></div>
        </div>
        <div>
            <div><a href="mailto:#{metadata.author.email}" target=_blank>#{metadata.author.email}</a></div>
        </div>