mixin container
    div(class="py-2 mx-4 md:px-8 max-w-screen-xl lg:mx-auto")
        block

mixin grid()
    div(class="md:grid md:grid-cols-12")
        block

mixin gridBigColumn()
    div(class="md:col-span-12 lg:col-span-8 lg:col-start-3 lg:col-end-11")
        block

mixin gridWithBigColumn()
    +grid()
        +gridBigColumn()
            block