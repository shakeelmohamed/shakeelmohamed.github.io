mixin mailto(user, domain, subject)
    //- <!-- // http://lists.evolt.org/archive/Week-of-Mon-20040202/154813.html -->
    span.mailto
        script(type="text/javascript").
            function gen_mail_to_link(lhs, rhs, subject) {
                document.write("<a class=\"mailto\" href=\"mailto");
                document.write(":" + lhs + "@");
                document.write(rhs + "?subject=" + subject + "\">" + lhs + "@" + rhs + "<\/a>");
            }
            gen_mail_to_link("#{user}", "#{domain}", "#{subject}")

mixin getRandomLogo(size=50)
    script getRandomLogo(#{size})

mixin headerLogo()
    h3(class="text-white text-center py-4 flex-nowrap md:text-left")
        a(href="/")
            +getRandomLogo()
            | Shakeel Mohamed

mixin navItem(href, label)
    a(class="font-sans font-bold text-white md:inline-block md:ml-8" href=href) #{label}

mixin footerNavItem(href, label)
    li
        a.subhead(href=href) #{label}

