include includes/mixins.pug

- var headshot="https://shakeelmohamed.com/img/headshot.jpg";
- var opengraphImage = "https://shakeelmohamed.com/img/shakeel-mohamed-opengraph.png";
- var desc="I run a design studio called ntrsct designs, helping small companies make the right first impression. I'm a strategic thinker, fascinated by identifying problems and helping align resources towards an effective solution. I aspire to implement processes that eliminate confusion, enable focus & help small businesses deliver true value to their customers.";
doctype html
html(lang="en")

    head
        +head(".", "Shakeel Mohamed", opengraphImage, desc)
    body
        header.flex.center
            div.mx-auto
                div.nav.center
                    ul.nav-links.no-indent
                        +navLink("./", "Home")
                        +navLink("https://ntrsct.com/", "ntrsct designs")
                        +navLink("#projects", "Projects")
                        +navLink("./posts", "Blog Posts")
                        +navLink("#mentions", "Mentions")
                    figure
                        a(href="http://shakeelmohamed.com")
                            img.profile-photo(src=headshot alt="Photo of Shakeel Mohamed" title="Photo of Shakeel Mohamed")
                    h1.inline.h1.pr2 Shakeel Mohamed
                    p.post-content(style="text-align: center") #{desc}
                    ul.social-links.no-indent
                        each URL, name in socialLinks
                            +socialLink(URL, name)                
        section.flex.center
            div.flex-col.mx-auto
                h2#projects Projects
                hr
                ul.section-list.no-indent
                    each item in projects
                        +project(item)
        section.flex.center
            div.flex-col.mx-auto
                h2#blogs
                    | Blog Posts (
                    a(href="https://volleyy.com/shakeel/" target="_blank") subscribe
                    |  - 
                    a(href="./feed.xml" target="_blank") rss
                    | )
                hr
                ul.section-list.no-indent
                    each item in blogs
                        +blogPost(item)
        section.flex.center
            div.flex-col.mx-auto
                h2#mentions Mentions
                hr
                ul.section-list.no-indent
                    each item in mentions
                        +news(item)
        include includes/footer.pug