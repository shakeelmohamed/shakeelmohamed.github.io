mixin head(root, pageTitle, pageImg, pageDesc)
    title #{pageTitle}
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="chrome=1")
    meta(name="viewport", content="width=device-width, initial-scale=1, user-scalable=no")
    meta(property="og:title" content=pageTitle)
    meta(property="og:image" content=pageImg)
    meta(property="og:description" content=pageDesc)
    link(href="https://unpkg.com/basscss@8.0.1/css/basscss.min.css", rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Montserrat", rel="stylesheet", type="text/css")
    if root
        link(href="https://ShakeelMohamed.com/", rel="canonical")
    - var relativePrefix = "."
    if !root
        - var relativePrefix = ".."
    link(href=relativePrefix + "/styles.css", rel="stylesheet")    
    link(href=relativePrefix + "/feed.xml", rel="alternate", type="application/rss+xml", title="RSS Feed for ShakeelMohamed.com")
