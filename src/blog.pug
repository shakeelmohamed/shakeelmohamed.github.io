extends _includes/layouts/base.pug

//- Temporary workaround: this file is blog.pug, symlinked to posts.pug for legacy SEO

block hero
    h1.text-white The Blog ‚úçüèΩ
    p.subhead.text-white #{description}

mixin getFeatured()
    each post in collections.featured
        a(href=post.url)
            h3.text-white #{post.data.title}
        p.text-navy #{post.data.description}

//- TODO: design this component
mixin getPosts()
    each post in collections.post
        .flex.place-content-between
            p.text-light-blue #{post.data.cleanDate}
            p.text-light-blue= "Tags: " +  post.data.categories
        a(href=post.url)
            p.subhead.text-white #{post.data.title}

block content
    +sectionOrange()
        +gridWithBigColumn()
            h2.text-navy Featured Posts
            +getFeatured()
    +sectionNavy()
        +gridWithBigColumn()
            h2.text-white Recent Posts
            +getPosts()